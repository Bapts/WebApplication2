@using Microsoft.AspNet.Identity
@model IEnumerable<WebApplication2.Models.Chapter>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChapterNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpVote)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookTitle)
        </td>
        <td style="text-align: center">
            @Html.DisplayFor(modelItem => item.ChapterNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationTime)
        </td>
        <td class="table-overflow">
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td style="text-align: center">
            @Html.DisplayFor(modelItem => item.UpVote)
        </td>
        <td>
            @if (User.Identity.GetUserId() == @item.CreatorId)
            {
                @Html.ActionLink("| Edit", "Edit", new {id = item.Id})
            } |
            @Html.ActionLink("Details", "Details", new {id = item.Id}) |
            @Html.ActionLink("Delete", "Delete", new {id = item.Id}) |
        </td>
    </tr>
}

</table>
